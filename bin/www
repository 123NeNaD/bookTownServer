#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('booktownserver:server');
var http = require('http');
var https = require('https');
var fs = require('fs');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);
app.set('secPort', port + 443);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Create HTTPS server.
 */
//We are configuring HTTPS server.
//To configure HTTPS server, we will declare a few options for our HTTPS server. For an HTTPS server, 
//we need to configure the private key and the certificate that our HTTPS server is going to use.
var options = {
  //We use "readFileSync()" so that we read this file synchronously which means that the file will be 
  //read completely before we proceed on to that next step and configure our HTTPS server. 
  key: fs.readFileSync(__dirname + '/82083089_httplocalhost3000.key'),
  cert: fs.readFileSync(__dirname + '/82083089_httplocalhost3000.cert')
};

//We are configuring the secure server.
var secureServer = https.createServer(options, app);

/**
* Listen on provided port, on all network interfaces.
*/

//We are configuring the secure server to listen on port number "secPort".
secureServer.listen(app.get('secPort'), () => {
  console.log('Secure Server listening on port', app.get('secPort'));
});
//If the "secureServer" receives an error event, then we will let the "onError" which is configured down below, to handle that.
secureServer.on('error', onError);
//If the "secureServer" receives an listening event, then we will let the "onListening" which is configured down below, to handle that.
secureServer.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
